{
    "name": "CommunityItem",
    "base": "PersistedModel",
    "strict": true,
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "mixins": {
        "TimeStamp" : true
    },
    "properties": {
        "body": {
            "type": "text",
            "required": true,
            "description": "The body content of the item",
            "postgresql": {
                "dataType": "text"
            }
        },

        "summary": {
            "type": "string",
            "required": false,
            "description": "The summary of the item (like a title)"
        }
    },
    "validations": [],
    "relations": {
        "user": {
            "type": "belongsTo",
            "model": "User"
        },
        "votes": {
            "type": "hasMany",
            "model": "Vote"
        }
    },
    "acls": [],
    "methods": {}
}
