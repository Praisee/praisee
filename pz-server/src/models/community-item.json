{
    "name": "CommunityItem",
    "base": "PersistedModel",
    "strict": true,
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "mixins": {
        "TimeStamp": true,
        "Sluggable": {
            "property": "summary"
        }
    },
    "properties": {
        "type": {
            "type": "string",
            "required": true,
            "description": "The type of community item"
        },

        "summary": {
            "type": "string",
            "required": true,
            "description": "The summary of the item (like a title)"
        },

        "body": {
            "type": "string",
            "description": "The item's text-only body content",
            "postgresql": {
                "dataType": "text"
            }
        },

        "bodyData": {
            "type": "object",
            "description": "The item's body content with formatting and embedded content",
            "postgresql": {
                "dataType": "json"
            }
        },

        "createdAt": {
            "type": "date"
        },

        "updatedAt": {
            "type": "date"
        },

        "reviewRating": {
            "type": "number",
            "description": "The review rating (1-5)"
        },

        "reviewPricePaid": {
            "type": "string",
            "description": "The price paid for the reviewed topic",
            "postgresql": {
                "dataType": "numeric"
            }
        },

        "reviewPricePaidCurrency": {
            "type": "string",
            "description": "The currency of the reviewed topic's paid price",
            "default": "usd"
        }
    },
    "validations": [],
    "relations": {
        "user": {
            "type": "belongsTo",
            "model": "PraiseeUser",
            "foreignKey": "userId"
        },

        "votes": {
            "type": "hasMany",
            "model": "Vote",
            "polymorphic": {
                "foreignKey": "parentId",
                "discriminator": "parentType"
            }
        },

        "topics": {
            "type": "hasAndBelongsToMany",
            "model": "Topic"
        },

        "comments": {
            "type": "hasMany",
            "model": "Comment",
            "polymorphic": {
                "foreignKey": "parentId",
                "discriminator": "parentType"
            }
        },

        "photos": {
            "type": "hasMany",
            "model": "Photo",
            "polymorphic": {
                "foreignKey": "parentId",
                "discriminator": "parentType"
            }
        },

        "reviewedTopic": {
            "type": "belongsTo",
            "model": "Topic"
        }
    },
    "acls": [],
    "methods": {}
}
