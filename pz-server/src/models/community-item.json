{
    "name": "CommunityItem",
    "base": "PersistedModel",
    "strict": true,
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "mixins": {
        "TimeStamp" : true,

        "Sluggable" : {
            "property": "summary"
        }
    },
    "properties": {
        "type": {
            "type": "string",
            "required": true,
            "description": "The type of community item"
        },

        "summary": {
            "type": "string",
            "required": true,
            "description": "The summary of the item (like a title)"
        },

        "body": {
            "type": "string",
            "required": true,
            "description": "The body content of the item",
            "postgresql": {
                "dataType": "text"
            }
        },

        "createdAt": { "type": "date" },
        "updatedAt": { "type": "date" }
    },
    "validations": [],
    "relations": {
        "user": {
            "type": "belongsTo",
            "model": "User"
        },
        "votes": {
            "type": "hasMany",
            "model": "Vote"
        },
        "topics": {
            "type": "hasAndBelongsToMany",
            "model": "Topic"
        }
    },
    "acls": [],
    "methods": {}
}
