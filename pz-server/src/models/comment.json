{
    "name": "Comment",
    "base": "PersistedModel",
    "strict": true,
    "options": {
        "validateUpsert": true
    },
    "mixins": {
        "TimeStamp" : true
    },
    "properties": {
        "body": {
            "type": "string",
            "required": true,
            "description": "The content of the comment"
        }
    },
    "validations": [],
    "relations": {
        "user": {
            "type": "belongsTo",
            "model": "PraiseeUser",
            "foreignKey": "userId"
        },
        "votes": {
            "type": "hasMany",
            "model": "Vote"
        },
        "parent": {
            "type": "belongsTo",
            "polymorphic": {
                "foreignKey": "parentId",
                "discriminator": "parentType"
            }
        },
        "comments":{
            "type": "hasMany",
            "model": "Comment"
        }
    },
    "acls": [],
    "methods": {}
}
