{
    "name": "Topic",
    "base": "PersistedModel",
    "strict": true,
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "mixins": {
        "TimeStamp" : true,

        "Sluggable" : {
            "property": "name"
        }
    },
    "properties": {
        "name": {
            "type": "string",
            "required": true,
            "index": {
                "unique": true
            },
            "description": "Global (human friendly) identifier used to reference the topic"
        },

        "description": {
            "type": "string",
            "required": false,
            "description": "Short summary of the topic used for search results"
        },

        "overviewContent": {
            "type": "string",
            "required": false,
            "description": "Full overview of topic in markdown, used in the sidebar",
            "postgresql": {
                "dataType": "text"
            }
        },

        "isVerified": {
            "type": "boolean",
            "required": false,
            "default": false,
            "description": "Whether or not the topic has been verified by a moderator yet"
        },

        "thumbnailPhotoPath": {
            "type": "string",
            "required": false,
            "description": "Photo server path to the topic's thumbnail (denormalized field)"
        },

        "createdAt": { "type": "date" },
        "updatedAt": { "type": "date" }
    },
    "validations": [],
    "relations": {
        "attributes": {
            "type": "hasMany",
            "model": "TopicAttribute"
        },

        "communityItems": {
            "type": "hasAndBelongsToMany",
            "model": "CommunityItem"
        },

        "photos": {
            "type": "hasMany",
            "model": "Photo",
            "polymorphic": {
                "foreignKey": "parentId",
                "discriminator": "parentType"
            }
        },

        "reviews": {
            "type": "hasMany",
            "model": "CommunityItem"
        }
    },
    "acls": [],
    "methods": {}
}
