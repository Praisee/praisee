{
    "name": "Vote",
    "base": "PersistedModel",
    "strict": true,
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "isUpVote": {
            "type": "boolean",
            "required": true,
            "description": "Upvote if true, Downvote if false"
        }
    },
    "validations": [],
    "relations": {
        "user": {
            "type": "belongsTo",
            "model": "PraiseeUser",
            "foreignKey": "userId"
        },
        "affectedUser": {
            "type": "belongsTo",
            "model": "PraiseeUser",
            "foreignKey": "affectedUserId"
        },
         "parent": {
            "type": "belongsTo",
            "polymorphic": {
                "foreignKey": "parentId",
                "discriminator": "parentType"
            }
        }
    },
    "acls": [],
    "methods": {}
}
